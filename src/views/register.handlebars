<div class="registerContainer">
    <form action="" id="registerForm">
        <div class="field" > <label for="first_name" class="label">Nombre</label>
            <div class="control"> <input class="input is-rounded" type="text" placeholder="Tu nombre" name="first_name"> </div>
        </div>

        <div class="field" > <label for="last_name" class="label">Apellido</label>
            <div class="control"> <input class="input is-rounded" type="text" placeholder="Tu apellido" name="last_name"> </div>
        </div>

        <div class="field" > <label for="age" class="label">Edad</label>
            <div class="control"> <input class="input is-rounded" type="number" placeholder="Tu edad" name="age"> </div>
        </div>

        <div class="field"> <label class="label" for="email">Email</label>
            <input name="email" class="input is-rounded" type="email" placeholder="Email input"> 
        </div>

        <div class="field" > <label for="password" class="label">Contraseña</label>
            <div class="control"> <input class="input is-rounded" type="password" placeholder="Contraseña" name="password"> </div>
        </div>

        <div class="field is-grouped">
            <div class="control"> <button type="submit" class="button is-link">Registrarte</button> </div>
        </div>

    </form>

</div>


